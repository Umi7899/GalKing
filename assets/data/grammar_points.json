        "grammarId": 101,
        "lessonId": 1,
        "name": "〜は〜です（名词判断句）",
        "coreRule": "「A は B です」表示「A 是 B」，用于对主语进行判断或说明。",
        "structure": "名词 + は + 名词 + です",
        "mnemonic": "把は想象成一个聚光灯，照亮主语后面的内容。です是「礼貌的句号」。",
        "examples": [
            {
                "jp": "わたしは学生です。",
                "zhHint": "我是学生。"
            },
            {
                "jp": "李さんは中国人です。",
                "zhHint": "小李是中国人。"
            },
            {
                "jp": "これは本です。",
                "zhHint": "这是书。"
            }
        ],
        "counterExamples": [
            {
                "jp": "× わたしが学生です。",
                "zhHint": "（が用于强调，此处应用は）"
            },
            {
                "jp": "× わたしは学生だ。",
                "zhHint": "（だ是简体，正式场合用です）"
            }
        ],
        "drills": [
            {
                "drillId": "g101_q1",
                "type": "choice",
                "stem": "わたし＿＿学生です。",
                "options": [
                    {
                        "id": "a",
                        "text": "は"
                    },
                    {
                        "id": "b",
